<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<%-include('includes/head') %>
<body class="d-flex flex-column min-vh-100">
    
    <!-- Navbar/Header with Login/Logout -->
    <%-include('includes/header') %>

    <!-- Hero Section -->
    <div class="p-5 text-center bg-dark text-white rounded-3 shadow-sm">
        <h1 class="display-4 fst-italic">THE BLOGGER</h1>
        <p class="lead mt-3">
            Your go-to platform for sharing thoughts, ideas, and stories.
            <br>
            Explore our latest posts or <a href="#" data-bs-toggle="modal" data-bs-target="#registerModal" class="text-decoration-none text-info">sign up</a> to start sharing your own!
        </p>
    </div>                     

    <!-- Main Content Area with Posts -->
    <main class="container py-5 flex-grow-1">
        <div class="row mb-4">
            <div class="col text-center">
                <% if(allPosts.length === 0){%>
                    <h2 class="text-center text-muted">No posts available at the moment!</h2>
                <%} else {%>
                    <h2 class="text-center display-6">Latest Posts</h2><hr>
                <%} %>
            </div>
        </div>

        <div class="row row-cols-1 g-4">
            <% allPosts.forEach(post => { %>
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <a href="/post/post/<%= post.id %>"><h5 class="card-title text-capitalize"><%= post.title %></h5></a>
                            <p class="card-text text-truncate" style="max-height: 50px;"><%= post.body %></p>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <div>
                                <a href="/post/post/<%= post.id %>" class="btn btn-primary btn-sm">Read more</a>
                            </div>

                            <div class="d-flex align-items-center">
                                <a href="/post/post/<%= post.id %>#comments-section" class="text-decoration-none me-3">
                                    <i class="bi bi-chat-dots-fill"><%= post.commentsCount %></i>
                                </a>

                                <% if (user) { %>
                                    <span class="like-btn" data-post-id="<%= post.id %>" role="button" tabindex="0">
                                        <span class="like-icon-container <%= post.hasLiked ? 'btn-danger' : 'text-danger-emphasis' %>">
                                            <i class="bi <%= post.hasLiked ? 'bi-heart-fill' : 'bi-heart' %>"></i>
                                            <span class="likes-count"><%= post.likesCount %></span>
                                        </span>
                                    </span>

                                <% } else { %>
                                    <span class="like-btn text-danger-emphasis">
                                        <i class="bi bi-heart"></i>
                                        <span class="likes-count"><%= post.likesCount %></span>
                                    </span>
                                <% } %>


                            </div>

                        </div>
                        <div class="card-body border-top text-muted d-flex justify-content-between align-items-end">
                            <small class="text-capitalize fst-italic">Posted by: <a href="/search/profile/<%= post.author %>"><%= post.author %></a></small>
                            <small class="text-end"><%= new Date(post.createdDate).toLocaleString() %></small>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

    </main>

    <!-- Footer -->
    <%-include('includes/footer')  %>

    <%-include('includes/loginModal')  %>

    <%-include('includes/registerModal')  %>

    <%-include('includes/adminModal') %>

</body>
</html>
