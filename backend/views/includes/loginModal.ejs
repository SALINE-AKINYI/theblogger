<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">User Login</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="loginFormAjax" action="/auth/login" method="POST"  novalidate>
          <fieldset>
            <!-- Area to display AJAX errors -->
            <div id="loginErrorAlert" class="alert alert-danger d-none" role="alert"></div>

            <!-- Hidden input for the referrer URL -->
            <input type="hidden" id="loginRedirectUrl" name="redirectUrl" value="/">

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required autofocus>
                <label for="username">Username</label>
                <div class="invalid-feedback">Please enter your username.</div>
            </div>
            
                        <div class="form-floating mb-3">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                <label for="password">Password</label>
                <div class="invalid-feedback">Please enter your password.</div>
            </div>

            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="submit">Log In</button>
            </div>

            <div class="mt-3 text-center">
                Don't have an account? <a href="#" data-bs-toggle="modal" data-bs-target="#registerModal" class="text-decoration-none">Sign up</a>
            </div>
            <div class="mt-2 text-center">
                Are you admin? <a href="#" data-bs-toggle="modal" data-bs-target="#adminLoginModal" class="text-decoration-none">Admin Login</a>
            </div>

          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
