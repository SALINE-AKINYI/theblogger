<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<%- include('includes/head') %>
<body>
    <%- include('includes/header') %>
    <main class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <div class="card-header text-bg-primary text-center">
                        <h4 class="mb-0">Create a New Post</h4>
                    </div>
                    <div class="card-body">
                        <!-- Displaying server-side errors using Bootstrap alert -->
                        <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-danger" role="alert">
                            <ul class="mb-0">
                            <% errors.forEach((error) => { %>
                                <li><%= error %></li>
                            <% }); %>
                            </ul>
                        </div>
                        <% } %>

                        <form action="/post/create-post" method="POST"  novalidate>
                            <fieldset>
                                <div class="mb-3">
                                    <label for="title" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="title" name="title" autocomplete="off" required>
                                    <div class="invalid-feedback">
                                        Please provide a title for your post.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="body" class="form-label">Content</label>
                                    <textarea class="form-control" id="body" name="body" rows="8" required></textarea>
                                    <div class="invalid-feedback">
                                        Please provide some content for your post.
                                    </div>
                                </div>
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <button type="submit" class="btn btn-primary">Save New Post</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('includes/footer') %>

</body>
</html>
